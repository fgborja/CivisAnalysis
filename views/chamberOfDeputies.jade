	body
		h2#head CivisAnalysis: Brazilian Chamber of Deputies
		.container-fluid
			.row#main
				.col-xs-12
						.col-xs-5
							.col-xs-12
								br
							.col-xs-4
								h4.header Political Spectrum of Deputies
									a.btn(href='#', data-toggle='modal',data-target='.modal',onclick='javascript:setDeputyModal()')
										span.glyphicon.glyphicon-search
							.col-xs-8
								.canvas#canvasDeputies
							.col-xs-12
								br
							.col-xs-4
								h5.header Links connects deputies with 
									span.subhead#thresh 70% 
									text of vote correlation:
									.slider#slider
							.col-xs-8
								.canvas#canvasGraph

						.col-xs-2
							h4.header Parties
							#infoParties

						.col-xs-5
							.col-xs-12
								br
							.col-xs-4
								h4.header Political Spectrum of Roll Calls
									a.btn(href='#', data-toggle='modal',data-target='.modal',onclick='javascript:setRollCallModal()')
										span.glyphicon.glyphicon-search
							.col-xs-8
								.canvas#canvasRollCalls
							.col-xs-12
								br
							.col-xs-4
								h4.header States
							.col-xs-8
								.canvas#infoStates		
				.col-xs-12#timeline
					#loading
						img#loadingGIF(src='./images/ajax_loader.gif')

